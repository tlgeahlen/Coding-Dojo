<div class="d-flex justify-content-between">
    <h1>Welcome, @Context.Session.GetString("Username")</h1>
    <form action="/logout" method="post">
        <input type="submit" value="Logout" class="btn btn-danger">
    </form>
</div>
<div class="col-6">
    <h2>@Context.Session.GetInt32("Count")</h2>
</div>
<div class="col-6">
    <div class="d-flex gap-3">
        <form action="/plusone" method="post">
            <input type="submit" value="+1" class="btn btn-primary">
        </form>
        <form action="/minusone" method="post">
            <input type="submit" value="-1" class="btn btn-danger">
        </form>
    </div>
    <div class="d-flex gap-3">
        <form action="/timestwo" method="post">
            <input type="submit" value="x2" class="btn btn-info">
        </form>
        <form action="/random" method="post">
            <input type="submit" value="+Random" class="btn btn-success">
        </form>
    </div>
</div>