@{
    ViewData["Title"] = "Add a dish";
}
@model Dish

<h1 class="text-center">Add a dish!</h1>
<div class="d-flex justify-content-center">
    <a href="/">Home</a><p>&nbsp | Add a dish</p>
</div>

<form asp-action="Create" asp-controller="Home" method="post">
    <div class="d-flex justify-content-between">
        
        <div class="col-4 d-flex flex-column">
            <label asp-for="Name">Name of Dish</label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control mb-3">
            <label asp-for="Chef">Chef's Name</label>
            <span asp-validation-for="Chef" class="text-danger"></span>
            <input asp-for="Chef" class="form-control mb-3">
            <label asp-for="Calories"># of Calories</label>
            <span asp-validation-for="Calories" class="text-danger"></span>
            <input asp-for="Calories" class="form-control mb-3">
        </div>

        <div class="col-2 d-flex flex-column">
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>

        <div class="col-4 d-flex flex-column">
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
            <textarea asp-for="Description" rows="5" class="form-control"></textarea>
            <input type="submit" value="Add Dish" class="mt-4">
        </div>

    </div>
</form>